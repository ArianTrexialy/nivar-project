<Window x:Class="DeviceAnalisys_v5.AnalysisTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Select Analysis Type"
        Height="360" Width="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">
    <Border Background="#252526" CornerRadius="16">
        <Border.Effect>
            <DropShadowEffect Color="Black" ShadowDepth="6" BlurRadius="20" Opacity="0.7"/>
        </Border.Effect>
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="{Binding DeviceTitle}"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="#007ACC"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,25"/>

            <!-- Options -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <RadioButton x:Name="rbNoLoad"
                             Content="No-Load Analysis Only"
                             Foreground="White"
                             FontSize="17"
                             Margin="0,0,0,20"
                             IsChecked="True"/>
                <RadioButton x:Name="rbLoad"
                             Content="Load Analysis Only"
                             Foreground="White"
                             FontSize="17"
                             Margin="0,0,0,20"/>
                <RadioButton x:Name="rbBoth"
                             Content="Both (NoLoad + Load)"
                             Foreground="White"
                             FontSize="17"
                             Margin="0,0,0,0"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Content="Cancel"
                        Width="110"
                        Height="42"
                        Margin="0,0,15,0"
                        Click="Cancel_Click"
                        Background="#424242"
                        Foreground="White"
                        materialDesign:ButtonAssist.CornerRadius="10"/>

                <Button Content="Analyze"
                        Width="140"
                        Height="42"
                        IsDefault="True"
                        Click="Analyze_Click"
                        Background="#28A745"
                        Foreground="White"
                        materialDesign:ButtonAssist.CornerRadius="10"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>