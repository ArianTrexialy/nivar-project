<Window x:Class="DeviceAnalisys_v5.ReportPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report Preview" Height="600" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Margin="20">
            <TextBox x:Name="txtReport" Text="{Binding ReportText}" 
                     IsReadOnly="True" 
                     Background="#252526" 
                     Foreground="White" 
                     FontFamily="Consolas" 
                     FontSize="14" 
                     TextWrapping="Wrap"/>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button Content="Save as PDF" Width="150" Height="40" Click="SavePdf_Click" Background="#28A745" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>